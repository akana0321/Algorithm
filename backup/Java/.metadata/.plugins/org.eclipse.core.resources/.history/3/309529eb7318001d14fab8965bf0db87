	public static int linkNumbers(List<Integer> list) {
		String num = "";
		
		for(int i=0; i<list.size(); i++)
			num += list.get(i);
		
		return Integer.parseInt(num);
	}
	
	public static void main(String[] args) throws Exception {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		int result = 0;
		
		String target = br.readLine();
		
		if(target.equals("6174")) {
			System.out.println(result);
		} else  {			
			while(!target.equals("6174")) {
				List<Integer> minNum = new ArrayList<>();
				List<Integer> maxNum = new ArrayList<>();
				
				for(int i=0; i<target.length(); i++) {
					int ele = Character.getNumericValue(target.charAt(i));
					maxNum.add(ele);
					minNum.add(ele);
				}
				Collections.sort(minNum);
				Collections.sort(maxNum, Collections.reverseOrder());
				
				target = String.valueOf(linkNumbers(maxNum)  - linkNumbers(minNum));
				result++;
			}
			System.out.println(result);
		}
	}
}
